@model Todo.ViewModels.UpdateTodoViewModel

@{
    ViewData["Title"] = "UpdateTodo";
}

<div class="panel panel-default">
    <form action="/" method="post">
        <div class="form-group row">
            <label asp-for="Todo.TodoItemId" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
                <h3>@Model.Todo.TodoItemId</h3>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Todo.Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="Todo.Name" type="text" class="form-control" placeholder="asd">
            </div>
        </div>
        <button type="submit">Submit</button>
    </form>
</div>